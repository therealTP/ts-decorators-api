{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ]
  }