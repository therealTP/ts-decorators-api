{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": ["dom", "es2016"],
        "types":[
          "node",
          "chai",
          "mocha",
          "express",
          "reflect-metadata"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ]
  }